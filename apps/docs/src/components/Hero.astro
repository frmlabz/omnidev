---
interface Props {
	title: string;
	tagline: string;
	primaryCta?: {
		text: string;
		href: string;
	};
	secondaryCta?: {
		text: string;
		href: string;
	};
}

const { title, tagline, primaryCta, secondaryCta } = Astro.props;
---

<div class="od-hero">
	<div class="od-hero__content">
		<h1 class="od-hero__title">{title}</h1>
		<p class="od-hero__tagline" set:html={tagline} />

		{
			(primaryCta || secondaryCta) && (
				<div class="od-hero__cta">
					{primaryCta && (
						<a href={primaryCta.href} class="od-btn od-btn--primary">
							{primaryCta.text}
						</a>
					)}
					{secondaryCta && (
						<a
							href={secondaryCta.href}
							class="od-btn od-btn--secondary"
							target="_blank"
							rel="noopener"
						>
							{secondaryCta.text}
							<svg
								xmlns="http://www.w3.org/2000/svg"
								width="16"
								height="16"
								viewBox="0 0 24 24"
								fill="none"
								stroke="currentColor"
								stroke-width="2"
								stroke-linecap="round"
								stroke-linejoin="round"
							>
								<path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" />
								<polyline points="15 3 21 3 21 9" />
								<line x1="10" x2="21" y1="14" y2="3" />
							</svg>
						</a>
					)}
				</div>
			)
		}

		<div class="od-hero__terminal">
			<slot />
		</div>

		<div class="od-scroll-indicator">
			<span>Scroll to explore</span>
			<svg
				xmlns="http://www.w3.org/2000/svg"
				width="24"
				height="24"
				viewBox="0 0 24 24"
				fill="none"
				stroke="currentColor"
				stroke-width="2"
				stroke-linecap="round"
				stroke-linejoin="round"
			>
				<path d="m6 9 6 6 6-6"></path>
			</svg>
		</div>
	</div>
</div>
