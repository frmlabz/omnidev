{
	"name": "omnidev",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"workspaces": [
		"packages/*",
		"apps/*"
	],
	"scripts": {
		"typecheck": "tsc --noEmit",
		"lint:check": "biome lint .",
		"lint": "biome lint --write .",
		"format": "biome format --write .",
		"format:check": "biome format .",
		"check": "bun run typecheck && bun run lint && bun run format:check",
		"test": "bun test ./packages && bun test ./examples",
		"test:coverage": "bun test --coverage ./packages && bun test --coverage ./examples",
		"test:watch": "bun test --watch ./packages ./examples",
		"test:integration": "bash tests/integration/run.sh dev",
		"test:all": "bun run test:coverage && bun run test:integration",
		"build": "bun run --filter '@omnidev-ai/{core,capability,adapters}' build && bun run --filter '@omnidev-ai/cli' build && bun run --filter '@omnidev-ai/docs' build",
		"clean": "rm -rf packages/*/dist",
		"prepare": "lefthook install",
		"changeset": "changeset",
		"version": "changeset version && bun install",
		"release": "bun run build && bun run release:packages",
		"release:packages": "node scripts/publish.mjs",
		"docs:build": "cd apps/docs && bun run build",
		"docs:deploy": "cd apps/docs && bun run deploy"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.11",
		"@changesets/cli": "^2.29.8",
		"@commitlint/cli": "^20.3.1",
		"@commitlint/config-conventional": "^20.3.1",
		"@types/bun": "^1.1.17",
		"bunup": "^0.16.20",
		"lefthook": "^2.0.13",
		"typescript": "^5.7.2"
	},
	"dependencies": {
		"@iarna/toml": "^2.2.5",
		"@stricli/core": "^1.2.5"
	}
}
